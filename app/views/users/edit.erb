<h2>Edit Profile</h2>
<form id="register" method="post" action="/users/<%= @user.id %>">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label for="username">Username</label>
    <input name="user[username]" type="text" class="form-control" id="username" placeholder="Username" value="<%= @user.username %>">
  </div>
  <div class="form-group">
    <label for="profile_pic">Profile Pic</label>
    <input name="user[profile_pic]" type="text" class="form-control" id="profile_pic" placeholder="profile_pic" value="<%= @user.profile_pic %>">
  </div>
  <div class="form-group">
    <label for="email_address">Email address</label>
    <input name="user[email]" type="email_address" class="form-control" id="email_address" placeholder="Email" value="<%= @user.email_address %>">
  </div>
  <div class="form-group">
    <label for="password_digest">Password</label>
    <input name="user[password_digest]" type="password_digest" class="form-control" id="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Register</button>
</form>