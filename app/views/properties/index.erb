<h1>Properties index</h1>

<h2><a href='/properties/new'>New Property</a></h2>

<form id="search-form" class= "form-inline" action="/properties">
  <input type="text" name="search" placeholder="Search" value="<%= params[:search] %>" class="form-control">
  <button class="btn btn-default">Go</button>
  </form>

<% @properties.each do |property| %>
  <ul>
    <li>Address 1: <%= property.address1 %></li>
    <li>Address 2: <%= property.address2 %></li>
    <li>Postcode: <%= property.postcode %></li>
    <li>Borough: <%= property.borough %></li>
    <li>Property Image: <%= property.property_image %></li>

    <a href="/properties/<%= property.id %>">  Property info</a>
    <li><a href="/properties/<%= property.id %>/edit">Edit</a></li>
  </ul>
    <br>

<% end %>


