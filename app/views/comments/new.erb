<h1>New Comment</h1>

<form id="new" method="post" action="/landlords/new">

  <input type="hidden" name="comment[landlord_id]" value="<%= params[:id] %>">
  
  <div class="form-group">
    <label for="comment[issue]">Feedback</label>
    <textarea name="comment[name]" placeholder="Enter Feedback here"></textarea>
  </div>
    
  <div class="form-group">
    <label for="comment[rating]">Landlord rating</label>
    <input name="comment[rating]" type="radio" class="form-control" value=0>0
    <input name="comment[rating]" type="radio" class="form-control" value=1>1<input name="comment[rating]" type="radio" class="form-control" value=2>2
    <input name="comment[rating]" type="radio" class="form-control" value=3>3
    <input name="comment[rating]" type="radio" class="form-control" value=4>4
    <input name="comment[rating]" type="radio" class="form-control" value=5>5
  </div>

  <div class="form-group">
    <label for="comment[property_id]">Property</label>
    <select name="comment[property_id]">
    <% @properties.each do |property| %>
    <option value="<%= property.id %>"><%= property.address1 %></option>
    <% end %>
    <!-- dropdown with properties -->
    </select>
  </div>

  <button type="submit" class="btn btn-default">Add Comment</button>
</form>
