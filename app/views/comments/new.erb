<h1>New Comment</h1>

<form id="new" method="post" action="/landlords/new">
  <div class="form-group">
    <label for="issue">Feedback</label>
    <input name="landlord name" type="text"
    class="form-control" id="issue"
    placeholder="feedback">
  </div>

  <div class="form-group">
    <label for="rating">Landlord rating (0-5)</label>
    <input name="rating" type="radio" class="form-control" value=0>0
    <input name="rating" type="radio" class="form-control" value=1>1<input name="rating" type="radio" class="form-control" value=2>2
    <input name="rating" type="radio" class="form-control" value=3>3
    <input name="rating" type="radio" class="form-control" value=4>4
    <input name="rating" type="radio" class="form-control" value=5>5
  </div>

  <button type="submit" class="btn btn-default">Add Comment</button>
</form>